{
  "name": "validador-electron",
  "version": "1.0.0",
  "description": "Validador de documentos ITI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install-chrome": "node install-puppeteer-chrome.js",
    "prebuild": "npm run install-chrome",
    "build": "electron-builder --win --x64",
    "build-dir": "electron-builder --win --x64 --dir",
    "pack": "electron-packager . ValidadorITI --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.validador.iti",
    "productName": "Validador ITI",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "compression": "maximum",
    "files": [
      "**/*",
      "node_modules/**/*",
      "!node_modules/.cache/puppeteer/**/*",
      "node_modules/.cache/puppeteer/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico",
      "forceCodeSigning": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "puppeteer": "^21.0.0",
    "@puppeteer/browsers": "^1.9.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2"
  }
}
